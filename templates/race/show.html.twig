{% extends 'content.html.twig' %}
{% set page_title = "Race " ~  race.id %}
{% block title %}
	{{ page_title }}
{% endblock %}

{% block content %}
    <table class="table text-2xl">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ race.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ race.description }}</td>
            </tr>
            <tr>
                <th>StrengthModifier</th>
                <td>{{ race.strengthModifier }}</td>
            </tr>
            <tr>
                <th>DexterityModifier</th>
                <td>{{ race.dexterityModifier }}</td>
            </tr>
            <tr>
                <th>EnduranceModifier</th>
                <td>{{ race.enduranceModifier }}</td>
            </tr>
            <tr>
                <th>IntelligenceModifier</th>
                <td>{{ race.intelligenceModifier }}</td>
            </tr>
            <tr>
                <th>WisdomModifier</th>
                <td>{{ race.wisdomModifier }}</td>
            </tr>
            <tr>
                <th>CharismaModifier</th>
                <td>{{ race.charismaModifier }}</td>
            </tr>
            <tr>
                <th>RaceUrl</th>
                <td>{{ race.raceUrl }}</td>
            </tr>
        </tbody>
    </table>

    <div class="flex gap-8 justify-between">
    {{ component("Button", {
                url: path('app_race_index'),
                size: "w-40 h-20 xl:w-64 xl:h-32",
                label: "Retour Ã  la liste",
            })}}
    {{ component("Button", {
                url: path('app_race_edit', {'id': race.id}),
                size: "w-40 h-20 xl:w-64 xl:h-32",
                label: "Editer l'alignement",
            })}}
    
    {{ include('race/_delete_form.html.twig') }}
    </div>
{% endblock %}
