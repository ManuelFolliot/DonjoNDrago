{% extends 'content.html.twig' %}
{% set page_title = "Classe " ~  job.id %}
{% block title %}
	{{ page_title }}
{% endblock %}

{% block content %}
    <table class="table text-2xl">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ job.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ job.jobUrl }}</td>
            </tr>
        </tbody>
    </table>

    <div class="flex gap-8 justify-between">
    {{ component("Button", {
                url: path('app_job_index'),
                size: "w-40 h-20 xl:w-64 xl:h-32",
