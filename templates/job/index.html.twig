{% extends 'content.html.twig' %}
{% set page_title = "Gestion des classes de heros" %}

{% block title %}
	{{ page_title }}
{% endblock %}

{% block content %}
	<div class="flex justify-around">
		{{ component("Button", {
                url: path('app_admin'),
                size: "w-64 h-32",
                label: "Retour à l'accueil",
            })}}
		{{ component("Button", {
                url: path('app_job_new'),
                label: "Créer une classe",
            })}}
	</div>

	<table class="table-auto text-2xl w-full border border-separate border-slate-500 border-spacing-1">
		<thead class="text-left bg-red-900 bg-opacity-20">
			<tr>
				<th class="border border-slate-600">Id</th>
				<th class="border border-slate-600">Name</th>
				<th class="border border-slate-600">Description</th>
				<th class="border border-slate-600">Image</th>
				<th class="border border-slate-600">Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for job in jobs %}
				<tr>
					<td class="border border-slate-600">{{ job.id }}</td>
					<td class="border border-slate-600">{{ job.name }}</td>
					<td class="border border-slate-600">{{ job.description }}</td>
					<td class="border border-slate-600">{{ job.jobUrl }}</td>
					<td class="flex flex-wrap border border-slate-600">
						{{ component("Button", {
                                    url: path('app_job_show', {'id': job.id}),
                                    size: "w-28 h-8",
                                    label: "Voir",
									textSize: "text-sm"
                                })}}

						{{ component("Button", {
                                    url: path('app_job_edit', {'id': job.id}),
                                    size: "w-28 h-8",
                                    label: "Editer",
									textSize: "text-sm"
                                }
                                )}}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Pas d'enregistrements</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
